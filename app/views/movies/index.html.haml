-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      - if params[:sort_by].eql?("sort_by_title")
        %th.hilite= link_to('Movie Title', movies_path({:sort_by => "sort_by_title"}), :class => "title_header")
      - else
        %th= link_to('Movie Title', movies_path({:sort_by => "sort_by_title"}), :class => "title_header")
      %th Rating
      - if params[:sort_by].eql?("sort_by_release_date")
        %th.hilite= link_to('Release Date', movies_path({:sort_by => "sort_by_release_date"}), :class => "release_date_header")
      - else
        %th= link_to('Release Date', movies_path({:sort_by => "sort_by_release_date"}), :class => "release_date_header")
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
